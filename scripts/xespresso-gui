#!/usr/bin/env python3
"""
Command-line launcher for spresso Streamlit GUI.

This script can be installed as a command-line tool via setup.py.
"""

import sys
import os
from pathlib import Path

def main():
    """Launch the spresso Streamlit GUI."""
    try:
        import streamlit.web.cli as stcli
    except ImportError:
        print("‚ùå Error: Streamlit is not installed.")
        print("Please install it with: pip install streamlit")
        print("Or install spresso with GUI support: pip install spresso[gui]")
        sys.exit(1)
    
    # Find the streamlit app
    try:
        import gui
        gui_module_path = Path(gui.__file__).parent
        app_path = gui_module_path / "streamlit_app.py"
    except ImportError:
        print("‚ùå Error: gui module not found.")
        print("Please install spresso first: pip install spresso")
        sys.exit(1)
    
    if not app_path.exists():
        print(f"‚ùå Error: Could not find streamlit_app.py at {app_path}")
        sys.exit(1)
    
    print(f"üöÄ Launching spresso GUI...")
    print(f"üìÇ App location: {app_path}")
    print()
    
    # Launch streamlit
    sys.argv = ["streamlit", "run", str(app_path), "--browser.gatherUsageStats", "false"]
    sys.exit(stcli.main())

if __name__ == "__main__":
    main()
